---
/**
 * Navbar component
 *
 * Main navigation bar with logo and authentication button
 */

import { AuthButton } from "./AuthButton";
---

<nav class="bg-slate-900 border-b border-slate-800">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-indigo-500 hover:text-indigo-400 transition-colors"> YogaFit </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-6">
      <AuthButton client:load />
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden">
      <AuthButton client:load />
    </div>
  </div>
</nav>
