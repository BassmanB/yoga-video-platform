/**
 * Register page
 *
 * Registration page for new users (invite-only)
 * - Server-side: Check if already logged in (redirect to home)
 * - Client-side: RegisterForm with email confirmation
 * - Info section about email confirmation process
 * - Note: After registration, Supabase sends confirmation email
 */

import Layout from "@/layouts/Layout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";
import { GoogleAuthButton } from "@/components/auth/GoogleAuthButton";

// Server-side auth check - redirect if already logged in
const user = Astro.locals.user;

if (user) {
  // User is already logged in - redirect to home
  return Astro.redirect("/");
}

// Get redirect URL from query params
const redirectTo = Astro.url.searchParams.get("redirect") || "/";
