---
import "../styles/global.css";
import { Toaster } from "../components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Yoga Theme Fonts - Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link 
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Quicksand:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" 
      rel="stylesheet" 
    />
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <Toaster client:load position="bottom-right" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  
  :root {
    --font-display: 'Cormorant Garamond', serif;
    --font-heading: 'Quicksand', sans-serif;
    --font-body: 'Inter', system-ui, -apple-system, sans-serif;
  }
</style>
